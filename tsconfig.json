{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@lib": ["./lib"],
      "@lib/*": ["./lib/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
